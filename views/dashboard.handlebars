<div id="dash-inventory" class="row">
    {{#if loggedIn}}
        <div class="col-md-8">
            <h1>Your Inventory: </h1>
            <div class="row">
                <div class="col-md-4">
                    <div class="product-cart">
                        <img src="./assets/images/products/washer.jpg" alt="product image" />
                        <span>Home & Garden</span>
                        <h4>Washer/dryer Set</h4>
                        <div class="stars">
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        </div>
                        <h4 class="price">$200</h4>
                        <a href="#"><i class="fa-solid fa-cart-shopping buy-icon"></i></a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="product-cart">
                        <img src="./assets/images/products/chromebook.jpg" alt="product image" />
                        <span>Electronics</span>
                        <h4>Chromebook with 15.6‚Äù Touchscreen</h4>
                        <div class="stars">
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        </div>
                        <h4 class="price">$100</h4>
                        <a href="#"><i class="fa-solid fa-cart-shopping buy-icon"></i></a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="product-cart">
                        <img src="./assets/images/products/nike cleats.jpg" alt="product image" />
                        <span>Clothes & Shoes</span>
                        <h4>Nike Size 12</h4>
                        <div class="stars">
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        </div>
                        <h4 class="price">$35</h4>
                        <a href="#"><i class="fa-solid fa-cart-shopping buy-icon"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <form id="addProduct-form">
                <h3>Add a Product</h3>

                <div class="mb-3">
                    <label for="product_name" class="form-label">Product Name:</label>
                    <input type="form-control" class="form-control" id="product_name" placeholder="Enter product name...">
                </div>
                <div class="mb-3">
                    <select class="form-select form-select-md" aria-label="category select" id="category">
                        <option selected>Select a Category...</option>
                        <option value="Electronics">Electronics</option>
                        <option value="Sports & Outdoors">Sports & Outdoors</option>
                        <option value="Toys & Games">Toys & Games</option>
                        <option value="Home & Garden">Home & Garden</option>
                        <option value="Health & Beauty">Health & Beauty</option>
                        <option value="Baby & Kids">Baby & Kids</option>
                        <option value="Clothes & Shoes">Clothes & Shoes</option>
                        <option value="Vehicles">Vehicles</option>
                    </select>

                    <input class="form-control" type="text" placeholder="Enter product price..." aria-label="Product price" id="price">         
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-label">Product Description:</label>
                    <textarea class="form-control" id="description" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <label for="productImage" class="form-label">Choose an Image...</label>
                    <input class="form-control" type="file" name="productImage">
                </div>
                <button type="submit" class="btn btn-primary" id="add-product-btn">Add</button>
            </form>
        </div>
    {{else}}
        <h1>You are not logged in yet.</h1>
    {{/if}}
</div>
<script src="/js/dashboard.js"></script>